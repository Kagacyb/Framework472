@{
    Layout = "~/Views/Shared/_SearchLayout.cshtml";
    ViewBag.Title = "查询";
}
@Styles.Render("~/Content/enpot-serach.css")
@Scripts.Render("~/Scripts/enpot/pagination.js")
@Scripts.Render("~/Scripts/enpot/demo2.search.js?" + Guid.NewGuid())


@section left{
    <div class="enpot-search-group">
        日期
        <div class="enpot-search-item">
            <div class="enpot-search-leftTitle">
                从
            </div>
            <div class="enpot-search-rightContext">
                <input type="text" style="width: 100%" class="easyui-datebox" id="txtFrom" />
            </div>
        </div>
        <div class="enpot-search-item">
            <div class="enpot-search-leftTitle">
                至
            </div>
            <div class="enpot-search-rightContext">
                <input type="text" style="width: 100%" class="easyui-datebox" id="txtTo" />
            </div>
        </div>
    </div>
    <div class="enpot-search-group">
        拣配单号
        <div class="enpot-search-item">
            <input type="text" style="width: 100%" class="easyui-textbox" id="txtVbeln" />
        </div>
    </div>
    <div class="enpot-search-group">
        物料批次
        <div class="enpot-search-item">
            <input type="text" style="width: 100%" class="easyui-textbox" id="txtMatnr" />
        </div>
    </div>
    <div class="enpot-search-group">
        交货单号
        <div class="enpot-search-item">
            <input type="text" style="width: 100%" class="easyui-textbox" id="txtTanum" />
        </div>
    </div>
}

<div id="gvItemTitle" data-options="region:'center',split:true,collapsible:false" title=" ">
    <table id="gvItem" class="easyui-datagrid" data-options="rownumbers:true,singleSelect:true,border:false,fit:true,striped:true,toolbar:'#gvTools',pagination: true">
        <thead>
            <tr>
                <th data-options="field:'FACTORY',width:80">工厂</th>
                <th data-options="field:'LINE_NAME', width:80">产线</th>
                <th data-options="field:'MATNR', width:100">物料</th>
                <th data-options="field:'Url', width:120,formatter:showImg">图片</th>
                <th data-options="field:'KTEXT',width:300,align:'center'">名称</th>
                <th data-options="field:'CHARG',width:100">批次</th>
                <th data-options="field:'PALLET_BARCODE',width:120">栈板码</th>
                <th data-options="field:'CASE_BARCODE',width:100">桶码</th>
                <th data-options="field:'CREATE_TIME',width:150,align:'right'">桶码扫描时间</th>
                <th data-options="field:'PALLET_CREATE_TIME',width:150,align:'right'">关联板码时间</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <script>
        function showImg(value, row, index) {
            return "<img style='width:120px;height:80px;' border='1' src='" + row.Url + "' />";
        }
    </script>
</div>
<div id="gvTools" style="height: auto">
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-page_excel'" id="btnExport">导出</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true, iconCls:'icon-add'" id="btnCreate">创建</a>
</div>
@Html.Partial("~/Views/Demo2/_PartialUser.cshtml")