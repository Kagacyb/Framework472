
@Scripts.Render("~/Scripts/enpot/demo2.edituser.js")
<div id="dlgUser" class="easyui-dialog" title="编辑用户" style="width: 476px; height: 514px; padding: 8px;">
    <table style="padding: 0; border: 0; width: 100%; height: 100%">
        <tr>
            <th style="height: 30px; width: 78px; text-align: left; vertical-align: middle">
                用户名
            </th>
            <th style="padding-left: 10px; text-align: left">
                <input type="text" id="dlgTxtUserName" class="easyui-textbox" />
            </th>
        </tr>
        <tr>
            <th style="height: 30px; width: 78px; text-align: left; vertical-align: middle">
                登录账号
            </th>
            <th style="padding-left: 10px; text-align: left">
                <input type="text" id="dlgTxtLoginAccount" class="easyui-textbox" />
            </th>
        </tr>
        <tr>
            <th style="height: 30px; width: 78px; text-align: left; vertical-align: middle">
                防窜货账号
            </th>
            <th style="padding-left: 10px; text-align: left">
                <input type="text" id="dlgTxtUploadAccount" class="easyui-textbox" />
            </th>
        </tr>
        <tr>
            <th style="text-align: left; vertical-align: text-top">
                权限清单
            </th>
            <th style="padding-left: 10px; height: 230px;">
                <div style="height: 100%; width: 100%;">
                    <div class="easyui-tabs" data-options="width:350, height: 320, border:true" style="background-color: white">
                        <div id="tabRole" title="隶属权限组" style="padding: 5px; overflow-x: hidden;">
                            <ul id="dlgTvRole" class="easyui-tree" data-options="border:true,checkbox:true,cascadeCheck:true,striped:true"></ul>
                        </div>
                        <div id="tabLocations" title="隶属组织" style="padding: 5px; overflow-x: hidden;">
                            <ul id="dlgTvLocation" class="easyui-tree" data-options="border:true,checkbox:true,cascadeCheck:true,striped:true"></ul>
                        </div>
                    </div>
                </div>
            </th>
        </tr>

        <tr>
            <th colspan="2" style="height: 30px;">
                <input id="dlgBtnUserStop" class="easyui-linkbutton" style="float: left; width: 65px; height: 24px;" type="button" value="停用" />
                <input id="dlgBtnResetPwd" class="easyui-linkbutton" style="float: left; width: 75px; height: 24px; margin-left: 8px;" type="button" value="重置密码" />
                <input id="dlgBtnUserSave" class="easyui-linkbutton" style="float: right; width: 65px; height: 24px" type="button" value="保存" />
            </th>
        </tr>
    </table>
</div>
